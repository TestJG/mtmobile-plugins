<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo" class="page">
    <Page.actionBar>
        <ActionBar title="nativescript-datetimeselector" icon="" class="action-bar">
        </ActionBar>
    </Page.actionBar>
    <StackLayout class="p-20">
        <ScrollView class="h-full">
          <StackLayout>
            <Button text="Show Date Selector" tap="{{ showDateSelector }}" class="btn btn-primary"/>
            <Button text="Show DateTime Selector" tap="{{ showDateTimeSelector }}" class="btn btn-primary"/>
            <Button text="Show Time Selector" tap="{{ showTimeSelector }}" class="btn btn-primary"/>
          </StackLayout>
        </ScrollView>
    </StackLayout>
</Page>