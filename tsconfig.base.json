{
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmitHelpers": true,
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ESNext", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "plugins": [
      {
        "transform": "@nativescript/webpack/dist/transformers/NativeClass",
        "type": "raw"
      }
    ],
    "paths": {
      "@demo/shared": ["tools/demo/index.ts"],
      "@testjg/*": ["packages/*"],
      "@testjg/nativescript-datetimeselector": [
        "packages/nativescript-datetimeselector/index.d.ts"
      ],
      "@testjg/nativescript-filepicker": ["packages/nativescript-filepicker/index.d.ts"],
      "@testjg/nativescript-guid": ["packages/nativescript-guid/index.d.ts"],
      "@testjg/nativescript-http": ["packages/nativescript-http/index.d.ts"],
      "@testjg/nativescript-nfc": ["packages/nativescript-nfc/index.d.ts"],
      "@testjg/nativescript-nfc/angular": ["packages/nativescript-nfc/angular/index.ts"],
      "@testjg/nativescript-sqlite": ["packages/nativescript-sqlite/index.d.ts"]
    }
  },
  "angularCompilerOptions": {
    "strictTemplates": true
  },
  "exclude": ["node_modules", "tmp"]
}
